{
  "name": "cs-sharecode-cli",
  "version": "1.0.0",
  "description": "Standalone CLI tool to get CS demo download links from share codes",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "build": "tsc && node -e \"require('fs').copyFileSync('public/boiler-writter.exe', 'dist/boiler-writter.exe')\"",
    "buildlinux": "tsc && node -e \"const fs = require('fs'); const os = require('os'); const path = require('path'); if (os.platform() === 'win32') { fs.copyFileSync('public/boiler-writter.exe', 'dist/boiler-writter.exe'); } else { const srcDir = path.join('node_modules', '@akiver', 'boiler-writter', 'dist', 'bin', 'linux-x64'); fs.copyFileSync(path.join(srcDir, 'boiler-writter'), 'dist/boiler-writter'); fs.copyFileSync(path.join(srcDir, 'libsteam_api.so'), 'dist/libsteam_api.so'); fs.copyFileSync(path.join(srcDir, 'steam_appid.txt'), 'dist/steam_appid.txt'); }\"",
    "dev": "node --loader ts-node/esm index.ts",
    "start:api": "ts-node-esm src/api.ts"
  },
  "dependencies": {
    "@akiver/boiler-writter": "^1.6.0",
    "commander": "^12.0.0",
    "csgo-protobuf": "^3.0.16",
    "csgo-sharecode": "^3.1.2",
    "fs-extra": "^11.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.17.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "bin": {
    "cs-sharecode": "./index.js"
  },
  "keywords": [
    "counter-strike",
    "cs2",
    "csgo",
    "demo",
    "sharecode",
    "cli"
  ],
  "author": "Generated from CS Demo Manager",
  "license": "MIT"
}
